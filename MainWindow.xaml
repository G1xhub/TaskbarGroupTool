<Window x:Class="TaskbarGroupTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Taskbar Grouping Tool" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <TextBlock Text="Taskbar Grouping Tool" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            
            <!-- Groups List -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,10,0">
                <StackPanel Margin="15">
                    <TextBlock Text="Groups" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    <ListBox Name="GroupsListBox" Height="350" BorderThickness="1" BorderBrush="#DDD"
                             ItemsSource="{Binding Groups}" SelectedItem="{Binding SelectedGroup}"/>
                    
                    <!-- Search Section -->
                    <TextBlock Text="Search Applications" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Name="SearchTextBox" Grid.Column="0" Height="35" Padding="10,5"
                                 Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                 KeyUp="SearchTextBox_KeyUp"/>
                        <Button Name="SearchButton" Grid.Column="1" Content="Search" 
                                Margin="5,0,5,0" Padding="15,5" Click="SearchButton_Click"/>
                        <Button Name="BrowseButton" Grid.Column="2" Content="Browse" 
                                Padding="15,5" Click="BrowseButton_Click"/>
                    </Grid>
                    
                    <!-- Search Results -->
                    <ListBox Name="SearchResultsListBox" Height="200" BorderThickness="1" BorderBrush="#DDD"
                             Margin="0,10,0,0" MouseDoubleClick="SearchResultsListBox_MouseDoubleClick"
                             DisplayMemberPath="Name"/>
                </StackPanel>
            </Border>
            
            <!-- Group Details -->
            <Border Grid.Column="1" Background="White" CornerRadius="8">
                <StackPanel Margin="15">
                    <TextBlock Text="Group Details" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Group Name:" Margin="0,0,0,5"/>
                    <TextBox Name="GroupNameTextBox" Text="{Binding GroupName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Applications:" Margin="0,0,0,5"/>
                    <ListBox Name="ApplicationsListBox" Height="150" BorderThickness="1" BorderBrush="#DDD"
                             ItemsSource="{Binding SelectedGroup.Applications}"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Name="MoveUpButton" Content="↑" 
                                Margin="0,0,5,0" Padding="8,4" Width="30" Click="MoveUpButton_Click"/>
                        <Button Name="MoveDownButton" Content="↓" 
                                Margin="0,0,5,0" Padding="8,4" Width="30" Click="MoveDownButton_Click"/>
                        <Button Name="AddApplicationButton" Content="Add" 
                                Margin="0,0,5,0" Padding="8,4" Background="#E74C3C" Foreground="White"/>
                        <Button Name="DeleteApplicationButton" Content="Remove" 
                                Background="#E74C3C" Foreground="White" Padding="8,4"/>
                    </StackPanel>
                    
                    <TextBlock Text="Shortcut Icon:" Margin="0,15,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox Name="IconComboBox" Grid.Column="0" Height="30" 
                                  SelectedValue="{Binding SelectedIconPath}" SelectedValuePath="Path">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{Binding Icon}" Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Name}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button Name="BrowseIconButton" Grid.Column="1" Content="Browse" 
                                Margin="5,0,0,0" Padding="8,3" Click="BrowseIconButton_Click"/>
                    </Grid>
                    
                    <Button Name="CreateShortcutButton" Content="Create Taskbar Shortcut" 
                            Margin="0,15,0,0" Padding="10,5" Click="CreateShortcutButton_Click"/>
                    
                    <TextBlock Text="Note: After creating the shortcut, right-click on it and select 'Pin to taskbar'" 
                               FontSize="12" Foreground="#666" TextWrapping="Wrap" Margin="0,15,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="NewGroupButton" Content="New Group" 
                        Margin="0,0,10,0" Padding="15,8"/>
                <Button Name="SaveGroupButton" Content="Save" 
                        Margin="0,0,10,0" Padding="15,8"/>
                <Button Name="DeleteGroupButton" Content="Delete" 
                        Background="#E74C3C" Foreground="White" Padding="15,8"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
