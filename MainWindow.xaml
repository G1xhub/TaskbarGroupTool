<Window x:Class="TaskbarGroupTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Taskbar Grouping Tool" Height="750" Width="1050"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PrimaryBackground}"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Light Theme Colors (warm industrial) -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#EDEBE6"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#E3E0D9"/>
        <SolidColorBrush x:Key="CardBackground" Color="#F5F3EF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#C8C4BC"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#6B6860"/>
        <SolidColorBrush x:Key="AccentColor" Color="#8B7D6B"/>
        <SolidColorBrush x:Key="HeaderBackground" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="HeaderText" Color="#E8E6E1"/>
        <SolidColorBrush x:Key="InputBackground" Color="#F9F8F5"/>
        <SolidColorBrush x:Key="StatusBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="StatusText" Color="#7CB87C"/>
        <SolidColorBrush x:Key="ActionButtonBg" Color="#3A3A3A"/>
        <SolidColorBrush x:Key="ActionButtonText" Color="#C8C4BC"/>
        <SolidColorBrush x:Key="ActiveTabBg" Color="#8B7D6B"/>
        <SolidColorBrush x:Key="ActiveTabText" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="InactiveTabText" Color="#8A8780"/>
        <SolidColorBrush x:Key="ListItemHover" Color="#DDD9D0"/>
        <SolidColorBrush x:Key="ListItemSelected" Color="#C8C0B4"/>
        <SolidColorBrush x:Key="DangerColor" Color="#A04040"/>
        <SolidColorBrush x:Key="DangerHover" Color="#8A3535"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#4A7C59"/>

        <!-- Dark Theme Colors (stored but not active by default) -->
        <SolidColorBrush x:Key="DarkPrimaryBackground" Color="#141419"/>
        <SolidColorBrush x:Key="DarkSecondaryBackground" Color="#1C1C24"/>
        <SolidColorBrush x:Key="DarkCardBackground" Color="#1E1E28"/>
        <SolidColorBrush x:Key="DarkBorderBrush" Color="#2E2E3A"/>
        <SolidColorBrush x:Key="DarkTextPrimary" Color="#D4D2CC"/>
        <SolidColorBrush x:Key="DarkTextSecondary" Color="#7A7872"/>
        <SolidColorBrush x:Key="DarkAccentColor" Color="#8B7D6B"/>
        <SolidColorBrush x:Key="DarkHeaderBackground" Color="#0E0E12"/>

        <!-- Flat Button Style -->
        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,7"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource ListItemHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource ListItemSelected}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource DangerColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource DangerHover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action Button (large, for bottom right) -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ActionButtonBg}"/>
            <Setter Property="Foreground" Value="{DynamicResource ActionButtonText}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="30,14"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource AccentColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Compact ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="Border" Grid.ColumnSpan="2"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter Margin="8,4"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"/>
                            </Border>
                            <ToggleButton x:Name="DropDownToggle" Grid.Column="1"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"
                                          Background="Transparent" BorderThickness="0">
                                <Path Stroke="{DynamicResource TextSecondary}" StrokeThickness="1.5"
                                      Data="M 3 5 L 7 9 L 11 5" HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Width="14" Height="14"/>
                            </ToggleButton>
                            <Popup x:Name="PART_Popup" Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Fade">
                                <Border Background="{DynamicResource CardBackground}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1" MaxHeight="200">
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Header TextBlock -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Field Label -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Card Border -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Themed TextBox -->
        <Style x:Key="ThemedTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="CaretBrush" Value="{DynamicResource TextPrimary}"/>
        </Style>

        <!-- Themed ListBox -->
        <Style x:Key="ThemedListBox" TargetType="ListBox">
            <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Modern Button (alias for FlatButton, used in code-behind references) -->
        <Style x:Key="ModernButton" TargetType="Button" BasedOn="{StaticResource FlatButton}"/>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ═══════════════ HEADER BAR ═══════════════ -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBackground}" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="icons/logo.ico" Width="22" Height="22" Margin="0,0,10,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="TASKBAR_GROUP"
                               FontFamily="Consolas" FontSize="16" FontWeight="Bold"
                               Foreground="{DynamicResource HeaderText}" VerticalAlignment="Center"/>
                    <TextBlock Text="  v1.0"
                               FontFamily="Consolas" FontSize="10"
                               Foreground="{DynamicResource InactiveTabText}" VerticalAlignment="Bottom" Margin="0,0,0,1"/>
                </StackPanel>

                <!-- Theme Toggle -->
                <Button Grid.Column="2" Name="ThemeToggleButton"
                        Style="{StaticResource SecondaryButton}"
                        Padding="10,5" FontSize="11" Content="/dark"/>
            </Grid>
        </Border>

        <!-- ═══════════════ MAIN CONTENT ═══════════════ -->
        <Grid Grid.Row="1" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.1*"/>
                <ColumnDefinition Width="0.9*"/>
            </Grid.ColumnDefinitions>

            <!-- ══════ LEFT PANEL: Groups + Search ══════ -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,6,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Section Header -->
                    <Border Grid.Row="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="14,10">
                        <TextBlock Text="[ GROUPS ]" Style="{StaticResource SectionHeader}" Margin="0"/>
                    </Border>

                    <!-- Groups List -->
                    <ListBox Grid.Row="1" Name="GroupsListBox"
                             Style="{StaticResource ThemedListBox}"
                             BorderThickness="0"
                             Margin="0"
                             ItemsSource="{Binding Groups}"
                             SelectedItem="{Binding SelectedGroup}"/>

                    <!-- Group Actions -->
                    <Border Grid.Row="2" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="10,8">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Name="NewGroupButton" Content="+ NEW"
                                    Style="{StaticResource FlatButton}" Margin="0,0,6,0"/>
                            <Button Name="SaveGroupButton" Content="SAVE"
                                    Style="{StaticResource SecondaryButton}" Margin="0,0,6,0"/>
                            <Button Name="DeleteGroupButton" Content="DELETE"
                                    Style="{StaticResource DangerButton}"/>
                        </StackPanel>
                    </Border>

                    <!-- Search Section -->
                    <Border Grid.Row="3" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="14,10">
                        <TextBlock Text="[ SEARCH APPLICATIONS ]" Style="{StaticResource SectionHeader}" Margin="0"/>
                    </Border>

                    <Grid Grid.Row="4" Margin="10,0,10,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="140"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Name="SearchTextBox" Grid.Column="0"
                                     Style="{StaticResource ThemedTextBox}"
                                     Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                     KeyUp="SearchTextBox_KeyUp"
                                     ToolTip="Search applications..."/>
                            <Button Name="SearchButton" Grid.Column="1" Content="FIND"
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="4,0,4,0" Click="SearchButton_Click"/>
                            <Button Name="BrowseButton" Grid.Column="2" Content="BROWSE..."
                                    Style="{StaticResource SecondaryButton}" Click="BrowseButton_Click"/>
                        </Grid>

                        <ListBox Grid.Row="1" Name="SearchResultsListBox"
                                 Style="{StaticResource ThemedListBox}"
                                 MouseDoubleClick="SearchResultsListBox_MouseDoubleClick"
                                 DisplayMemberPath="Name"
                                 AllowDrop="True"
                                 PreviewMouseLeftButtonDown="SearchResultsListBox_PreviewMouseLeftButtonDown"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- ══════ RIGHT PANEL: Group Details + Config ══════ -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="6,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Section Header -->
                    <Border Grid.Row="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="14,10">
                        <TextBlock Text="[ CONFIGURATION ]" Style="{StaticResource SectionHeader}" Margin="0"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="14,12,14,14">
                            <!-- Group Name -->
                            <TextBlock Text="GROUP NAME" Style="{StaticResource FieldLabel}"/>
                            <TextBox Name="GroupNameTextBox"
                                     Style="{StaticResource ThemedTextBox}"
                                     Text="{Binding GroupName, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,14"/>

                            <!-- Applications -->
                            <TextBlock Text="APPLICATIONS" Style="{StaticResource FieldLabel}"/>
                            <ListBox Name="ApplicationsListBox" Height="180"
                                     Style="{StaticResource ThemedListBox}"
                                     ItemsSource="{Binding SelectedGroup.Applications}"
                                     AllowDrop="True" Drop="ApplicationsListBox_Drop"
                                     DragOver="ApplicationsListBox_DragOver"
                                     Margin="0,0,0,6"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <Button Name="MoveUpButton" Content="UP"
                                        Style="{StaticResource SecondaryButton}"
                                        Margin="0,0,4,0" Width="50" Click="MoveUpButton_Click"/>
                                <Button Name="MoveDownButton" Content="DN"
                                        Style="{StaticResource SecondaryButton}"
                                        Margin="0,0,4,0" Width="50" Click="MoveDownButton_Click"/>
                                <Button Name="AddApplicationButton" Content="+ ADD"
                                        Style="{StaticResource FlatButton}"
                                        Margin="0,0,4,0" Click="AddApplicationButton_Click"/>
                                <Button Name="DeleteApplicationButton" Content="REMOVE"
                                        Style="{StaticResource DangerButton}" Click="DeleteApplicationButton_Click"/>
                            </StackPanel>

                            <!-- Shortcut Icon -->
                            <TextBlock Text="SHORTCUT ICON" Style="{StaticResource FieldLabel}"/>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox Name="IconComboBox" Grid.Column="0" Height="32"
                                          SelectedValue="{Binding SelectedIconPath}" SelectedValuePath="Path"
                                          Style="{StaticResource DarkComboBox}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="{Binding Icon}" Width="16" Height="16" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Name}" FontFamily="Consolas" FontSize="11"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <Button Name="BrowseIconButton" Grid.Column="1" Content="..."
                                        Style="{StaticResource SecondaryButton}" Margin="4,0,0,0" Width="36"
                                        Click="BrowseIconButton_Click"/>
                            </Grid>

                            <!-- Create Shortcut -->
                            <Button Name="CreateShortcutButton"
                                    Content="> CREATE TASKBAR SHORTCUT"
                                    Style="{StaticResource ActionButton}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,4,0,10" Click="CreateShortcutButton_Click"/>

                            <TextBlock Text="Right-click the shortcut and select 'Pin to taskbar'"
                                       FontFamily="Consolas" FontSize="10"
                                       Foreground="{DynamicResource TextSecondary}"
                                       TextWrapping="Wrap" Margin="0,0,0,16"/>

                            <!-- Statistics Mini Panel -->
                            <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Padding="0,12,0,0" Margin="0,4,0,0">
                                <StackPanel>
                                    <TextBlock Text="[ QUICK STATS ]" Style="{StaticResource SectionHeader}"/>

                                    <ItemsControl ItemsSource="{Binding TopApplications}" MaxHeight="100">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding ApplicationName}"
                                                               FontFamily="Consolas" FontSize="10"
                                                               Foreground="{DynamicResource TextPrimary}"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding LaunchCount, StringFormat={}{0}x}"
                                                               FontFamily="Consolas" FontSize="10" FontWeight="Bold"
                                                               Foreground="{DynamicResource SuccessColor}"
                                                               Margin="8,0,0,0"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- ═══════════════ FOOTER / STATUS BAR ═══════════════ -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Status Log -->
            <Border Grid.Column="0" Background="{DynamicResource StatusBackground}"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0"
                    Padding="14,10">
                <StackPanel>
                    <TextBlock Text="SYSTEM_STATUS" FontFamily="Consolas" FontSize="9"
                               Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,4"/>
                    <TextBlock Name="StatusText1" Text="> READY"
                               FontFamily="Consolas" FontSize="11"
                               Foreground="{DynamicResource StatusText}"/>
                    <TextBlock Name="StatusText2" Text="> Waiting for input..."
                               FontFamily="Consolas" FontSize="11"
                               Foreground="{DynamicResource StatusText}"/>
                </StackPanel>
            </Border>

            <!-- Footer Actions -->
            <Border Grid.Column="1" Background="{DynamicResource StatusBackground}"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1,1,0,0"
                    Padding="10,8">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Name="StatisticsButton" Content="STATS"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,4,0" Click="StatisticsButton_Click"/>
                    <Button Name="BackupButton" Content="BACKUP"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,4,0" Click="BackupButton_Click"/>
                    <Button Name="RestoreButton" Content="RESTORE"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,4,0" Click="RestoreButton_Click"/>
                    <Button Name="ExportButton" Content="EXPORT"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,4,0" Click="ExportButton_Click"/>
                    <Button Name="ImportButton" Content="IMPORT"
                            Style="{StaticResource SecondaryButton}" Click="ImportButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
