<Window x:Class="TaskbarGroupTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Taskbar Grouping Tool" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PrimaryBackground}">
    
    <Window.Resources>
        <!-- Light Theme Colors -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#1F2937"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#6B7280"/>
        <SolidColorBrush x:Key="AccentColor" Color="#6366F1"/>
        <SolidColorBrush x:Key="HeaderBackground" Color="#1F2937"/>
        <SolidColorBrush x:Key="HeaderText" Color="#FFFFFF"/>
        
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="DarkPrimaryBackground" Color="#1F2937"/>
        <SolidColorBrush x:Key="DarkSecondaryBackground" Color="#374151"/>
        <SolidColorBrush x:Key="DarkCardBackground" Color="#374151"/>
        <SolidColorBrush x:Key="DarkBorderBrush" Color="#4B5563"/>
        <SolidColorBrush x:Key="DarkTextPrimary" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="DarkTextSecondary" Color="#D1D5DB"/>
        <SolidColorBrush x:Key="DarkAccentColor" Color="#818CF8"/>
        <SolidColorBrush x:Key="DarkHeaderBackground" Color="#111827"/>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="8" ShadowDepth="2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                          To="#4F46E5" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                          To="#6366F1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover: leicht anderes Grau je nach Theme über Resources -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                            </Trigger>
                            <!-- Pressed: etwas dunklerer Hintergrund -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Danger Button Style -->
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                          To="#DC2626" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                          To="#EF4444" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="12" ShadowDepth="4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Displayed selected item -->
                            <Border x:Name="Border"
                                    Grid.Column="0"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <ContentPresenter Margin="8,2,8,2"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"/>
                            </Border>

                            <!-- Drop-down button -->
                            <ToggleButton x:Name="DropDownToggle"
                                          Grid.Column="1"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid Width="24" Height="24">
                                    <Path Stroke="{DynamicResource TextSecondary}"
                                          StrokeThickness="2"
                                          Data="M 4 8 L 8 12 L 12 8"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                </Grid>
                            </ToggleButton>

                            <!-- Popup list -->
                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border Background="{DynamicResource SecondaryBackground}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                    <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBackground}" Padding="24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="icons/logo.ico" Width="32" Height="32" Margin="0,0,16,0"/>
                    <TextBlock Text="Taskbar Grouping Tool" 
                               FontSize="28" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource HeaderText}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Name="ThemeToggleButton"
                        Style="{StaticResource SecondaryButton}"
                        Padding="12,6"
                        Content="Dark Mode"/>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Groups & Search -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                <StackPanel Margin="20">
                    <TextBlock Text="Groups" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20" Foreground="{DynamicResource TextPrimary}"/>
                    <ListBox Name="GroupsListBox" Height="250"
                             BorderThickness="1"
                             BorderBrush="{DynamicResource BorderBrush}"
                             Background="{DynamicResource SecondaryBackground}"
                             Foreground="{DynamicResource TextPrimary}"
                             ItemsSource="{Binding Groups}" SelectedItem="{Binding SelectedGroup}"/>
                    
                    <!-- Search Section -->
                    <TextBlock Text="Search Applications" FontSize="16" FontWeight="Medium" Margin="0,16,0,12" Foreground="{DynamicResource TextSecondary}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Name="SearchTextBox" Grid.Column="0" Height="40" Padding="12,8"
                                 Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                 KeyUp="SearchTextBox_KeyUp" BorderThickness="1"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 Background="{DynamicResource SecondaryBackground}"
                                 Foreground="{DynamicResource TextPrimary}"
                                 FontSize="14"
                                 ToolTip="Suche nach Anwendungen..."/>
                        <Button Name="SearchButton" Grid.Column="1" Content="Search" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="8,0,8,0" Click="SearchButton_Click"
                                ToolTip="Suche starten"/>
                        <Button Name="BrowseButton" Grid.Column="2" Content="Browse" 
                                Style="{StaticResource SecondaryButton}" Click="BrowseButton_Click"
                                ToolTip="Dateien durchsuchen"/>
                    </Grid>
                    
                    <!-- Search Results -->
                    <ListBox Name="SearchResultsListBox" Height="200" BorderThickness="1"
                             BorderBrush="{DynamicResource BorderBrush}"
                             Margin="0,12,0,0"
                             Background="{DynamicResource SecondaryBackground}"
                             Foreground="{DynamicResource TextPrimary}"
                             MouseDoubleClick="SearchResultsListBox_MouseDoubleClick"
                             DisplayMemberPath="Name"
                             AllowDrop="True" PreviewMouseLeftButtonDown="SearchResultsListBox_PreviewMouseLeftButtonDown"/>
                </StackPanel>
            </Border>
            
            <!-- Group Details -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="6,0">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Group Details Section -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Group Details" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20" Foreground="{DynamicResource TextPrimary}"/>
                        
                        <TextBlock Text="Group Name:" Margin="0,0,0,8" FontWeight="Medium" Foreground="{DynamicResource TextSecondary}"/>
                        <TextBox Name="GroupNameTextBox" Text="{Binding GroupName, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,0,0,16" Height="40" Padding="12,8" BorderThickness="1"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 Background="{DynamicResource SecondaryBackground}"
                                 Foreground="{DynamicResource TextPrimary}"
                                 FontSize="14"/>
                        
                        <TextBlock Text="Applications:" Margin="0,0,0,8" FontWeight="Medium" Foreground="{DynamicResource TextSecondary}"/>
                        <ListBox Name="ApplicationsListBox" Height="180" BorderThickness="1"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 Background="{DynamicResource SecondaryBackground}"
                                 Foreground="{DynamicResource TextPrimary}"
                                 ItemsSource="{Binding SelectedGroup.Applications}"
                                 AllowDrop="True" Drop="ApplicationsListBox_Drop" DragOver="ApplicationsListBox_DragOver"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,16">
                            <Button Name="MoveUpButton" Content="↑" 
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="0,0,8,0" Width="40" Height="36" Click="MoveUpButton_Click"/>
                            <Button Name="MoveDownButton" Content="↓" 
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="0,0,8,0" Width="40" Height="36" Click="MoveDownButton_Click"/>
                            <Button Name="AddApplicationButton" Content="Add" 
                                    Style="{StaticResource ModernButton}"
                                    Margin="0,0,8,0" Click="AddApplicationButton_Click"/>
                            <Button Name="DeleteApplicationButton" Content="Remove" 
                                    Style="{StaticResource DangerButton}" Click="DeleteApplicationButton_Click"/>
                        </StackPanel>
                        
                        <TextBlock Text="Shortcut Icon:" Margin="0,0,0,8" FontWeight="Medium" Foreground="{DynamicResource TextSecondary}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox Name="IconComboBox" Grid.Column="0" Height="40" 
                                      SelectedValue="{Binding SelectedIconPath}" SelectedValuePath="Path"
                                      Style="{StaticResource DarkComboBox}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="{Binding Icon}" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding Name}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button Name="BrowseIconButton" Grid.Column="1" Content="..." 
                                    Style="{StaticResource SecondaryButton}" Margin="8,0,0,0" Width="40"
                                    Click="BrowseIconButton_Click"/>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2">
                        <Button Name="CreateShortcutButton" Content="Create Taskbar Shortcut" 
                                Style="{StaticResource ModernButton}" Margin="0,0,0,8" Click="CreateShortcutButton_Click"/>
                        
                        <TextBlock Text="Note: After creating the shortcut, right-click on it and select 'Pin to taskbar'" 
                                   FontSize="12" Foreground="{DynamicResource TextSecondary}" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Statistics -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="12,0,0,0">
                <StackPanel Margin="20">
                    <TextBlock Text="Statistics" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20" Foreground="{DynamicResource TextPrimary}"/>
                    
                    <!-- Top Applications -->
                    <Border Background="{DynamicResource SecondaryBackground}"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,16"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Top Applications" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12" Foreground="{DynamicResource TextSecondary}"/>
                            <ItemsControl ItemsSource="{Binding TopApplications}" Height="300">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding ApplicationName}" FontSize="12" Foreground="{DynamicResource TextPrimary}" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Column="1" Text="{Binding LaunchCount, StringFormat={}{0}x}" FontSize="12" FontWeight="Bold" Foreground="#3B82F6" Margin="8,0,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                    
                    <!-- Top Groups -->
                    <Border Background="{DynamicResource SecondaryBackground}"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,16"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Top Groups" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12" Foreground="{DynamicResource TextSecondary}"/>
                            <ItemsControl ItemsSource="{Binding TopGroups}" Height="150">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding GroupName}" FontSize="12" Foreground="{DynamicResource TextPrimary}" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Column="1" Text="{Binding LaunchCount, StringFormat={}{0}x}" FontSize="12" FontWeight="Bold" Foreground="#10B981" Margin="8,0,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                    
                    <!-- Statistics Actions -->
                    <StackPanel>
                        <Button Name="RefreshStatsButton" Content="Refresh Statistics" 
                                Style="{StaticResource SecondaryButton}" Margin="0,0,0,8" Click="RefreshStatsButton_Click"/>
                        <Button Name="DetailedStatsButton" Content="Detailed Statistics" 
                                Style="{StaticResource ModernButton}" Click="DetailedStatsButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SecondaryBackground}" Padding="24">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="StatisticsButton" Content="Statistics" 
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,12,0" Click="StatisticsButton_Click"/>
                <Button Name="BackupButton" Content="Backup" 
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,12,0" Click="BackupButton_Click"/>
                <Button Name="RestoreButton" Content="Restore" 
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,12,0" Click="RestoreButton_Click"/>
                <Button Name="ExportButton" Content="Export" 
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,12,0" Click="ExportButton_Click"/>
                <Button Name="ImportButton" Content="Import" 
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,12,0" Click="ImportButton_Click"/>
                <Button Name="NewGroupButton" Content="New Group" 
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,12,0" Click="NewGroupButton_Click"/>
                <Button Name="SaveGroupButton" Content="Save" 
                        Style="{StaticResource ModernButton}"
                        Margin="0,0,12,0" Click="SaveGroupButton_Click"/>
                <Button Name="DeleteGroupButton" Content="Delete" 
                        Style="{StaticResource DangerButton}" Click="DeleteGroupButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
