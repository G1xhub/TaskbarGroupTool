<Window x:Class="TaskbarGroupTool.Windows.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usage Statistics" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#F3F4F6" Padding="20" Margin="0,0,0,20" CornerRadius="8">
            <StackPanel>
                <TextBlock Text="Usage Statistics" FontSize="24" FontWeight="Bold" Foreground="#1F2937"/>
                <TextBlock Text="Track your most used applications and groups" FontSize="14" Foreground="#6B7280" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Column -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <!-- Top Applications -->
                <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Top Applications" FontSize="18" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding TopApplications}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding ApplicationName}" FontSize="14" Foreground="#1F2937" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding LaunchCount, StringFormat={}{0}x}" FontSize="14" FontWeight="Bold" Foreground="#3B82F6" Margin="10,0" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{Binding LastUsed, StringFormat='{}{0:HH:mm}'}" FontSize="12" Foreground="#6B7280" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
                <!-- Recently Used -->
                <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Recently Used" FontSize="18" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding RecentlyUsed}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding ApplicationName}" FontSize="14" Foreground="#1F2937" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding LastUsed, StringFormat='{}{0:dd.MM HH:mm}'}" FontSize="12" Foreground="#6B7280" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <!-- Right Column -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <!-- Top Groups -->
                <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Top Groups" FontSize="18" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding TopGroups}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding GroupName}" FontSize="14" Foreground="#1F2937" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding LaunchCount, StringFormat={}{0}x}" FontSize="14" FontWeight="Bold" Foreground="#10B981" Margin="10,0" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="{Binding LastUsed, StringFormat='{}{0:HH:mm}'}" FontSize="12" Foreground="#6B7280" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
                <!-- Summary -->
                <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Summary" FontSize="18" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,12"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Total Launches" FontSize="14" Foreground="#1F2937" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="{Binding TotalLaunches}" FontSize="16" FontWeight="Bold" Foreground="#3B82F6" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
        
        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Refresh" Command="{Binding RefreshCommand}" 
                    Background="#3B82F6" Foreground="White" Padding="16,8" Margin="0,0,12,0"/>
            <Button Content="Clear Statistics" Command="{Binding ClearStatisticsCommand}" 
                    Background="#EF4444" Foreground="White" Padding="16,8" Margin="0,0,12,0"/>
            <Button Content="Close" Click="CloseButton_Click" 
                    Background="#6B7280" Foreground="White" Padding="16,8"/>
        </StackPanel>
    </Grid>
</Window>
