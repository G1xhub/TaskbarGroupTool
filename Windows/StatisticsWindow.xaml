<Window x:Class="TaskbarGroupTool.Windows.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usage Statistics" Height="600" Width="750"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Window.Resources>
        <SolidColorBrush x:Key="WinBackground" Color="#EDEBE6"/>
        <SolidColorBrush x:Key="WinCard" Color="#F5F3EF"/>
        <SolidColorBrush x:Key="WinBorder" Color="#C8C4BC"/>
        <SolidColorBrush x:Key="WinInput" Color="#F9F8F5"/>
        <SolidColorBrush x:Key="WinTextPrimary" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="WinTextSecondary" Color="#6B6860"/>
        <SolidColorBrush x:Key="WinAccent" Color="#8B7D6B"/>
        <SolidColorBrush x:Key="WinSuccess" Color="#4A7C59"/>
        <SolidColorBrush x:Key="WinInfo" Color="#5A7C9E"/>
        <SolidColorBrush x:Key="WinDanger" Color="#A04040"/>
    </Window.Resources>

    <Border Background="{DynamicResource WinBackground}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#2A2A2A" Padding="20,12">
                <StackPanel>
                    <TextBlock Text="USAGE_STATISTICS" FontFamily="Consolas" FontSize="15"
                               FontWeight="Bold" Foreground="#E8E6E1"/>
                    <TextBlock Text="Track your most used applications and groups"
                               FontFamily="Consolas" FontSize="10"
                               Foreground="#8A8780" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0" Margin="0,0,7,0">
                    <!-- Top Applications -->
                    <Border Background="{DynamicResource WinCard}"
                            BorderBrush="{DynamicResource WinBorder}" BorderThickness="1"
                            Padding="14" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="[ TOP APPLICATIONS ]" FontFamily="Consolas" FontSize="11"
                                       FontWeight="Bold" Foreground="{DynamicResource WinTextSecondary}"
                                       Margin="0,0,0,10"/>
                            <ItemsControl ItemsSource="{Binding TopApplications}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding ApplicationName}"
                                                       FontFamily="Consolas" FontSize="12"
                                                       Foreground="{DynamicResource WinTextPrimary}"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding LaunchCount, StringFormat={}{0}x}"
                                                       FontFamily="Consolas" FontSize="12" FontWeight="Bold"
                                                       Foreground="{DynamicResource WinInfo}"
                                                       Margin="10,0" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding LastUsed, StringFormat='{}{0:HH:mm}'}"
                                                       FontFamily="Consolas" FontSize="10"
                                                       Foreground="{DynamicResource WinTextSecondary}"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Recently Used -->
                    <Border Background="{DynamicResource WinCard}"
                            BorderBrush="{DynamicResource WinBorder}" BorderThickness="1"
                            Padding="14">
                        <StackPanel>
                            <TextBlock Text="[ RECENTLY USED ]" FontFamily="Consolas" FontSize="11"
                                       FontWeight="Bold" Foreground="{DynamicResource WinTextSecondary}"
                                       Margin="0,0,0,10"/>
                            <ItemsControl ItemsSource="{Binding RecentlyUsed}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding ApplicationName}"
                                                       FontFamily="Consolas" FontSize="12"
                                                       Foreground="{DynamicResource WinTextPrimary}"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding LastUsed, StringFormat='{}{0:dd.MM HH:mm}'}"
                                                       FontFamily="Consolas" FontSize="10"
                                                       Foreground="{DynamicResource WinTextSecondary}"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="1" Margin="7,0,0,0">
                    <!-- Top Groups -->
                    <Border Background="{DynamicResource WinCard}"
                            BorderBrush="{DynamicResource WinBorder}" BorderThickness="1"
                            Padding="14" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="[ TOP GROUPS ]" FontFamily="Consolas" FontSize="11"
                                       FontWeight="Bold" Foreground="{DynamicResource WinTextSecondary}"
                                       Margin="0,0,0,10"/>
                            <ItemsControl ItemsSource="{Binding TopGroups}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding GroupName}"
                                                       FontFamily="Consolas" FontSize="12"
                                                       Foreground="{DynamicResource WinTextPrimary}"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding LaunchCount, StringFormat={}{0}x}"
                                                       FontFamily="Consolas" FontSize="12" FontWeight="Bold"
                                                       Foreground="{DynamicResource WinSuccess}"
                                                       Margin="10,0" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding LastUsed, StringFormat='{}{0:HH:mm}'}"
                                                       FontFamily="Consolas" FontSize="10"
                                                       Foreground="{DynamicResource WinTextSecondary}"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Summary -->
                    <Border Background="{DynamicResource WinCard}"
                            BorderBrush="{DynamicResource WinBorder}" BorderThickness="1"
                            Padding="14">
                        <StackPanel>
                            <TextBlock Text="[ SUMMARY ]" FontFamily="Consolas" FontSize="11"
                                       FontWeight="Bold" Foreground="{DynamicResource WinTextSecondary}"
                                       Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="TOTAL LAUNCHES"
                                           FontFamily="Consolas" FontSize="12"
                                           Foreground="{DynamicResource WinTextPrimary}"
                                           VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding TotalLaunches}"
                                           FontFamily="Consolas" FontSize="14" FontWeight="Bold"
                                           Foreground="{DynamicResource WinInfo}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" Background="{DynamicResource WinCard}"
                    BorderBrush="{DynamicResource WinBorder}" BorderThickness="0,1,0,0"
                    Padding="14,8">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="REFRESH" Command="{Binding RefreshCommand}"
                            Padding="14,6" Margin="0,0,6,0"
                            FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                            Background="{DynamicResource WinAccent}" Foreground="White"
                            BorderThickness="0" Cursor="Hand"/>
                    <Button Content="CLEAR STATS" Command="{Binding ClearStatisticsCommand}"
                            Padding="14,6" Margin="0,0,6,0"
                            FontFamily="Consolas" FontSize="11"
                            Background="{DynamicResource WinDanger}" Foreground="White"
                            BorderThickness="0" Cursor="Hand"/>
                    <Button Content="CLOSE" Click="CloseButton_Click"
                            Padding="14,6"
                            FontFamily="Consolas" FontSize="11"
                            Background="{DynamicResource WinCard}" Foreground="{DynamicResource WinTextPrimary}"
                            BorderBrush="{DynamicResource WinBorder}" BorderThickness="1"
                            Cursor="Hand"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
