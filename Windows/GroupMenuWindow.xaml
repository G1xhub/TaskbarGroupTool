<Window x:Class="TaskbarGroupTool.Windows.GroupMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Group Menu" Height="Auto" Width="Auto"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True">

    <Border Name="MainBorder" Background="#1E1E28" BorderBrush="#2E2E3A" BorderThickness="1" Padding="4,6">
        <StackPanel Name="MainPanel" Orientation="Vertical">
            <!-- Items will be added dynamically -->
        </StackPanel>
    </Border>
</Window>
